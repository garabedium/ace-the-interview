<% content_for :body_class, "page--login" %>


<div class="row">
  <div class="columns medium-7 medium-centered">
    <h1 class="page--header">Log In</h1>
  </div>
</div>


<div class="row">
  <div class="columns medium-7 medium-centered">

    <%= form_for(resource, :html => {:class => "form form__devise form__devise--login"}, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="columns medium-6">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="columns medium-6">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", :class => "button button--primary" %>
      </div>
    <% end %>

    <div class="row column text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>